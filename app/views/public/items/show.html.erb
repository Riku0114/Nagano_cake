<body>
   <div class = "container">
      <div class = "row">
         <div class = "col-md-6 mt-5 text-center" > <%= image_tag @item.image, size: '300x250' %></div>
         <div class = "col-md-6 mt-5" >
            <h1><%= @item.name %></h1>
            <h3 class = "mt-4"><%= @item.introduction %></h3>
            <p class = "mt-5 h3">¥<%= @item.with_tax_price %><span class = "h6">（税込）</span></p>
            <div class = "mt-3">
               <%= form_with model: @cart_item, url: cart_items_path do |f| %>
               <%= f.hidden_field :item_id, :value => @item.id %>
                  <%= f.select :amount, [['１',1], ['２',2], ['３',3], ['４',4], ['５',5], ['６',6], ['７',7], ['８',8], ['９',9], ['１０',10]], {}, {class: 'form-control w-25'} %>
                  <%= f.submit 'カートに入れる' %>
               <% end %>
            </div>
         </div>
      </div>
   </div>
</body>