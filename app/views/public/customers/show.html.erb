<body>
   <div class = "container">
      <div class = "row">
         <p class = "col-md-12 h3">マイページ</p>
         <p class = "col-md-12 h5">登録情報<%= link_to "編集する",customers_edit_path %></p>
         <table class="col table table-bordered">
            <thead>
               <tr>
                  <th class="col-md-3 pt-3 h4 text-center">氏名</th>
                  <td><%= @customer.last_name + @customer.first_name %></td>
               </tr>
               <tr>
                  <th class="col-md-3 pt-3 h4 text-center">カナ</th>
                  <td><%= @customer.last_name_kana + @customer.first_name_kana %></td>
               </tr>
               <tr>
                  <th class="col-md-3 pt-3 h4 text-center">郵便番号</th>
                  <td><%= @customer.postal_code %></td>
               </tr>
               <tr>
                  <th class="col-md-3 pt-3 h4 text-center">住所</th>
                  <td><%= @customer.address %></td>
               </tr>
               <tr>
                  <th class="col-md-3 pt-3 h4 text-center">電話番組</th>
                  <td><%= @customer.telephone_number %></td>
               </tr>
               <tr>
                  <th class="col-md-3 pt-3 h4 text-center">メールアドレス</th>
                  <td><%= @customer.email %></td>
               </tr>
            </thead>
         </table>
         <div class = "col-md-12 mt-5 h4 text-center">
            配送先
            <%= link_to "一覧を見る", addresses_path %>
         </div>
         <div class = "col-md-12 mt-5 h4 text-center">
            注文履歴<%= link_to "一覧を見る" , orders_path %>
         </div>
      </div>
   </div>
</body>