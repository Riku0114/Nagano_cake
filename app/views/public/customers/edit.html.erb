<header>
   <%= render 'public/homes/list' %>
</header>


<h1>編集</h1>

<%= form_with model: @customer, url: customers_path do |f| %>
  <div class="field">
    名前（姓）
    <%= f.text_field :last_name %>
    (名）
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    名前（セイ）
    <%= f.text_field :last_name_kana %>
    （メイ）
    <%= f.text_field :first_name_kana %>
  </div>
  
  <div class="field">
    郵便番号（ハイフンなし）
    <%= f.number_field :postal_code %>
  </div>

  <div class="field">
    住所
    <%= f.text_field :address %>
  </div>

  <div class="field">
    電話番号（ハイフンなし）
    <%= f.number_field :telephone_number %>
  </div>
  
  <div class="field">
    メールアドレス
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "編集内容を保存" %>
  </div>
<% end %>

   <div>
    <%= link_to "退会する",customers_unsubscribe_path(current_customer) %>
  </div>
  