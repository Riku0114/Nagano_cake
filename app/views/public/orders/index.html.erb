<div class = "container">
  <div class = "row">
     <div class = "col-md-12">
          <div class = "m-5"></div>
            <h2>注文履歴一覧</h2>
          </div>
        <table class="col mt-5 table table-bordered">
            <thead>
               <tr>
                  <th class="col-md-2">注文日</th>
                  <th class="col-md-3">配送先</th>
                  <th class="col-md-2">注文商品</th>
                  <th class="col-md-1.5">支払金額</th>
                  <th class="col-md-2">ステータス</th>
                  <th class="col-md-1.5">注文詳細</th>
               </tr>
            </thead>
            <tbody>
               <% @order.each do |order| %>
               <tr>
                  <td class = "pt-3 h4 text-center"><%= order.created_at.strftime("%Y-%m-%d" ) %></td>
                  <td class = "pt-3 h4 text-center">
                     <%= "〒" + order.postal_code %><br>
                     <%= order.address %><br>
                     <%= order.customer.last_name + order.customer.first_name %>
                  </td>
                  <td class = "pt-3 h4 text-center">
                     <% order.order_items.each do |order| %>
                     <%= order.item.name %>
                     <% end %>
                  </td>
                  <td class = "pt-3 h4 text-center"><%= order.total_price %></td>
                  <td class = "pt-3 h4 text-center"><%= order.order_status_i18n %></td>
                  <td class = "pt-3 h4 text-center"><%= link_to "表示する", order_path(order.id) %></td>
               </tr>
               <% end %>
            </tbody>
         </table>
      </div>
   </div>