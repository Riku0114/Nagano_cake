<h1>商品詳細</h1>

<tbody>
   <tr>
      <div>
           <td>
              <%= image_tag @item.image %>
           </td>
       </div>
       <div>
           <td>
              商品名<%= @item.name %>
           </td>
       </div>
       <div>
           <td>
              説明<%= @item.introduction %>
           </td>
       </div>
       <div>
           <td>
              税抜き価格<%= @item.price %>
           </td>
       </div>
       <div>
           <td>
              ジャンル<%= @item.genre.name %>
           </td>
       </div>
       <div>
           <td>
              <%= "商品状態" %>
              <% if @item.is_active == true %>
              販売中
              <% elsif @item.is_active == false  %>
              売切れ
              <% end %>
           </td>
       </div>
   </tr>
   <div>
      <%= link_to "戻る", admin_items_path %>
      <%= link_to "編集", edit_admin_item_path(params[:id]) %>
   </div>