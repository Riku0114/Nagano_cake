<div class = "container">
      <div class = "row">
        <div class = "col-md-12">
          <div class = "m-5"></div>
            <h2>商品詳細</h2>
          </div>
           <div class = " col-md-4 mt-3"><%= image_tag @item.image, size: '300x250'  %></div>
        <div class = "col-md-8 mt-3">
           <div class = "row">
              <div class = "col-md-4">
                 商品名
              </div>
              <div class = "col-md-8">
                 <%= @item.name %>
              </div>
           </div>
           <div class = "row">
              <div class = "col-md-4 mt-3">
                 商品説明
              </div>
              <div class = "col-md-8 mt-3">
                 <%= @item.introduction %>
              </div>
           </div>
           <div class = "row">
              <div class = "col-md-4 mt-3">
                 ジャンル
              </div>
              <div class = "col-md-8 mt-3">
                 <%= @item.genre.name %>
              </div>
           </div>
           <div class = "row">
              <div class = "col-md-4 mt-3">
                 税込価格<br>
                 (税抜価格)
              </div>
              <div class = "col-md-8 mt-3">
                 <%= (@item.price * 1.1).floor %>(<%= @item.price %>)円
              </div>
           </div>
           <div class = "row">
              <div class = " col-md-4 mt-3">
                 販売ステータス
              </div>
              <div class = "col-md-8 mt-3">
                 <% if @item.is_active == true %>
                    販売中
                 <% elsif @item.is_active == false  %>
                    売切れ
              <% end %>
              </div>
           </div>
           <div class = "row">
              <div class = "col-md-12 mt-3">
                 <%= link_to "編集する", edit_admin_item_path(params[:id]) %>
              </div>
            </div>
        </div>
     </div>
  </div>
</div>