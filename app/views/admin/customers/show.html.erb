
   <div class = "container">
      <div class = "row">
         <p class = "col-md-12 h3"><%= @customer.last_name + @customer.first_name %>さんの会員詳細</p>
         <table class="col table table-bordered">
            <thead>
               <tr>
                  <th class="col-md-3 pt-3 h4 text-center">会員ID</th>
                  <td><%= @customer.id %></td>
               </tr>
               <tr>
                  <th class="col-md-3 pt-3 h4 text-center">氏名</th>
                  <td><%= @customer.last_name + @customer.first_name %></td>
               </tr>
               <tr>
                  <th class="col-md-3 pt-3 h4 text-center">フリガナ</th>
                  <td><%= @customer.last_name_kana + @customer.first_name_kana %></td>
               </tr>
               <tr>
                  <th class="col-md-3 pt-3 h4 text-center">郵便番号</th>
                  <td><%= @customer.postal_code %></td>
               </tr>
               <tr>
                  <th class="col-md-3 pt-3 h4 text-center">住所</th>
                  <td><%= @customer.address %></td>
               </tr>
               <tr>
                  <th class="col-md-3 pt-3 h4 text-center">電話番号</th>
                  <td><%= @customer.telephone_number %></td>
               </tr>
               <tr>
                  <th class="col-md-3 pt-3 h4 text-center">メールアドレス</th>
                  <td><%= @customer.email %></td>
               </tr>
               <tr>
                  <th class="col-md-3 pt-3 h4 text-center">退会ステータス</th>
                  <td><% if @customer.is_deleted == false %>
                       有効
                      <% else @customer.is_deleted == true %>
                       退会
                      <% end %>
                  </td>
               </tr>
            </thead>
         </table>
         <div class = "col-md-12 mt-5 h4 text-center">
            <%= link_to "編集する", edit_admin_customer_path(@customer.id) %>
         </div>
         <div class = "col-md-12 mt-5 h4 text-center">
         </div>
      </div>
   </div>