<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

<body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <h1 class = "center navbar-brand ml-5">
          Nagano Cake
        </h1>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ml-auto mr-5">
            <% if admin_signed_in? %>
              <li class="nav-item active">
                <div>
                  <%= link_to admin_root_path, class:"nav-link" do %>
                  <%= "注文履歴一覧" %>
                  <% end %>
                  <span class="sr-only">(current)</span>
                </div>
              </li>
              <li class="nav-item">
                <div>
                  <%= link_to admin_items_path, class:"nav-link"  do %>
                  <%= "商品一覧" %>
                  <% end %>
                </div>
              </li>
              <li class="nav-item">
                <div>
                  <%= link_to admin_genres_path, class:"nav-link" do %>
                  <%= "ジャンル一覧" %>
                  <% end %>
                </div>
              </li>
              <li class="nav-item">
                <div>
                  <%= link_to admin_customers_path, class:"nav-link"  do %>
                  <%= "会員一覧" %>
                  <% end %>
                </div>
              </li>
              <li class="nav-item">
                <div>
                  <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class:"nav-link" %>
                </div>
              </li>
              <% elsif customer_signed_in? %>
              <li class="nav-item active">
                <div>
                  <%= link_to "TOPページ", root_path, class:"nav-link" %>
                  <span class="sr-only">(current)</span>
                </div>
              </li>
              <li class="nav-item">
                <div>
                  <%= link_to "商品一覧画面", items_path, class:"nav-link" %>
                </div>
              </li>
              <li class="nav-item">
                <div>
                  <%= link_to "カート画面",  cart_items_path, class:"nav-link" %>
                </div>
              </li>
              <li class="nav-item">
                <div>
                  <%= link_to "マイページ", customers_mypage_path, class:"nav-link" %>
                </div>
              </li>
              <li class="nav-item">
                <div>
                  <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class:"nav-link" %>
                </div>
              </li>
              <% else %>
              <li class="nav-item">
                <div>
                  <%= link_to "about", about_path, class:"nav-link" %>
                </div>
              </li>
              <li class="nav-item">
                <div>
                  <%= link_to "商品一覧", root_path, class:"nav-link" %>
                  <span class="sr-only">(current)</span>
                </div>
              </li>
              <li class="nav-item">
                <div>
                  <%= link_to "新規登録", new_customer_registration_path, class:"nav-link" %>
                </div>
              </li>
              <li class="nav-item">
                <div>
                  <%= link_to "ログイン", new_customer_session_path, class:"nav-link" %>
                </div>
              </li>
            <% end %>
          </ul>
        </div>
      </nav>
      <p id="notice"><%= flash[:notice] %></p>
    </header>
    <main>
      <%= yield %>
    </main>
  </body>
</html>
